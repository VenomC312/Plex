{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "lib": [
      "DOM",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol"
    ],
    "sourceMap": true,
    "inlineSourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
